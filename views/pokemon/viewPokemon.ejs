<%- contentFor('body') %>

<a class="btn" href="/pokemon"> GO BACK</a>

<div class="pokemon-intro">
  <p class="center"><img src="<%= pokemon.battle_image_url %>" alt="">
    <h4 class="center orange-text lighten-1"><b><%= pokemon.pokemonName %></b></h4>
  </p>

  <div class="pokemon-info">
    <h5><b>Trainer:</b> <%= pokemon.trainerName %></h5>
    <h5><b>CP:</b> <%= pokemon.cp %></h5>
    <h5><b>In a Gym?</b>
    <% if (pokemon.in_gym) { %>
      Yes </h5>
    <% } else { %>
      No </h5>
    <% } %>
  </div>




</div>



