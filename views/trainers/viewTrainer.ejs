<%- contentFor('body') %>

<a class="btn" href="/trainers"> GO BACK</a>

<div class="trainer-intro z-depth-5">
  <h2 class="orange-text lighten-1 center"><p><img src="<%= trainer.image_url %>" alt=""></p><b><%= trainer.name %></b></h2>
</div>


<div class="my-pokemon-list-trainer">
  <% for (let i = 0; i < pokemon.length; i++) { %>
    <div class="pokemon z-depth-1">
      <h4 class="orange-text lighten-1"><%= pokemon[i].name %></h4>
      <p><img src="<%= pokemon[i].display_image_url %>" alt=""></p>
    </div>
  <% } %>
</div>
